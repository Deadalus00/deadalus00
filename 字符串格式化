#字符串格式化
#All in Terminal

    #str
format = 'Here\'s to you, %s and %s.'
values = ('Nicola','Bart')
print(format % values)

    #float
format1 = 'And pi with three demicals equals to: %.3f.'
from math import pi
print (format1 % pi)

    #Template 
from string import Template
s = Template('')
s.substitute('')
